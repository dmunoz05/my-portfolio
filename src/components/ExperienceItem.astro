---
interface Props {
  title: string;
  description: string;
  date: string;
  empresa: string;
}

const { title, description, date, empresa } = Astro.props;
---

<li class="mb-16 ms-6">
  <span
    class="absolute flex mt-1 items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 dark:ring-white ring-gray-900 dark:bg-blue-900"
  >
    <svg
      class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300"
      aria-hidden="true"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </span>
  <h3 class="grid sm:flex items-center ml-1 mb-1 pb-2 text-sm justify-start sm:justify-normal font-semibold text-black dark:text-white">
    {empresa} <span
      class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300  my-2 sm:ms-3"
      >{date}</span
    >
  </h3>
  <time
    class="block mb-2 text-xl font-normal leading-none text-sky-400"
    >{title}</time
  >
  <p
    class="mb-4 text-base font-normal text-black dark:text-gray-500 text-pretty"
  >
    {description}
  </p>
</li>