---
const { item, i } = Astro.props;
---

<div class="relative grid grid-cols-1 justify-center items-center mb-4">
  <h1 class="text-xl w-full text-center font-medium pb-2 text-black dark:text-white">{item.title}</h1>
  <article class="relative">
    {
      item.link !== "" && (
        <a href={item.link} target="_blank" class="relative rounded-2xl">
          <img
            class="hover:blur-sm h-72 w-full rounded-2xl"
            src={item.image}
            alt={`Captura de pantalla del proyecto ${item.title}`}
          />
        </a>
      )
    }

    {
      item.link === "" && (
        <div class="relative rounded-2xl">
          <img
            class="hover:blur-sm h-72 w-full rounded-2xl"
            src={item.image}
            alt={`Captura de pantalla del proyecto ${item.title}`}
          />
        </div>
      )
    }
  </article>
  <section class="pb -5">
    <ul class="relative flex gap-x-4 flex-row justify-center w-full p-2">
      {
        item.tags.map((tag: any) => (
          <li>
            <span
              class={`relative flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-2 z-40`}
            >
              <tag.icon class="size-7 cursor-default" />
            </span>
          </li>
        ))
      }
    </ul>
  </section>
  <section class="flex flex-row justify-center pt-2 gap-4">
    {
      item.github !== "" && (
        <a
          href={item.github}
          target="_blank"
          class="dark:bg-white/15 relative
            border border-white/10 rounded-full
            flex justify-center items-center gap-x-2
            py-2 px-4 bg-black
            transition
            hover:scale-110 dark:hover:bg-white/10
            cursor-pointer"
        >
          Github
        </a>
      )
    }

    {
      item.link !== "" && (
        <a
          href={item.link}
          target="_blank"
          class="bg-sky-400 relative
            border border-sky-400/10 rounded-full
            flex justify-center items-center gap-x-2
            py-2 px-4
            transition
            hover:scale-110 hover:bg-sky-700
            cursor-pointer"
        >
          Link
        </a>
      )
    }
    {
      item.link === "" && (
        <button
          class="bg-slate-400 relative
            border border-slate-400/10 rounded-full
            flex justify-center items-center gap-x-2
            py-2 px-4
            transition
            hover:scale-110 hover:bg-slate-400"
        >
          En proceso
        </button>
      )
    }
  </section>
</div>
