---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Github from "../icons/Github.astro";
import SocialIcons from "../components/SocialIcons.astro";
---

<Layout title="Portafolio Daniel Muñoz">
  <main>
    <section class="w-full lg:w-[840px] mx-auto py-40">
      <div class="flex flex-row gap-4">
        <img
          class="rounded-full w-80 h-80"
          src="http://infinitprogram.com/wp-content/uploads/2024/01/foto-perfil-cuadrada.jpeg"
          alt="daniel-foto"
        />
        <div class="flex flex-col justify-end items-end pb-6">
          <h1 class="text-white text-5xl font-bold w-full flex justify-start flex-row gap-x-4 pb-4">
            Hey, Soy Daniel <div class="flex justify-center items-center">
              <Badge>Disponible</Badge>
            </div>
          </h1>
          <h2 class="text-xl">
            <span>+2 años de experiencia.</span>
            <span class="text-cyan-400/90">Desarrollador Web</span><span class=" text-gray-400/90"
              >. De Colombia, Medellín.</span
            >
            <span> Enfocado en desarrollo de aplicaciones web.</span>
          </h2>

          <nav class="flex items-center gap-x-4 justify-start w-full pt-4">
            <SocialIcons href="https://www.linkedin.com/in/dmunoz05/">
              <LinkedIn class="w-6 h-6" />
              LinkedIn
            </SocialIcons>
            <SocialIcons
              href="https://github.com/dmunoz05"
              target="_blank"
              rel="noopener"
            >
              <Github class="w-6 h-6" />
              Github
            </SocialIcons>
          </nav>
        </div>
      </div>
    </section>
  </main>
</Layout>
